---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Open Job Application Platform" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-white font-sans">
    <header class="bg-blue-600 text-white p-6">
      <div class="container mx-auto">
        <h1 class="text-3xl font-medium">
          <a href="/">WeJob - Open Job Platform</a>
        </h1>
        <p class="mt-2">Submit your developer profile via GitHub PR</p>
      </div>
    </header>

    <main class="container mx-auto mt-8 px-4">
      <slot />
    </main>

    <footer
      class="bg-gray-100 text-gray-600 mt-12 py-6 border-t border-gray-200"
    >
      <div class="container mx-auto text-center">
        <p>&copy; 2024 Open Job Application Platform. All rights reserved.</p>
      </div>
    </footer>
    <style is:global>
      /* You can add any global styles here */
    </style>
  </body>
</html>
