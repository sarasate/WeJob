---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Layout from "../../../layouts/main.layout.astro";

export async function getStaticPaths() {
  const jobs = await getCollection("jobs");
  const berlinJobs = jobs.filter((job) =>
    job.data.location?.toLowerCase().includes("berlin")
  );

  return berlinJobs.map((job) => ({
    params: { id: job.id },
    props: { job },
  }));
}

type Props = {
  job: CollectionEntry<"jobs">;
};

const { job } = Astro.props;
const { title, company, location, description, type, remote, postedAt, url } =
  job.data;
---

<Layout title={`${title} - WeJob Berlin Jobs`}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
      <nav class="mb-8">
        <a href="/jobs/berlin" class="text-blue-600 hover:text-blue-800">
          ‚Üê Back to Berlin Jobs
        </a>
      </nav>

      <article class="bg-white rounded-lg shadow-lg p-8">
        <header class="mb-6">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">{title}</h1>
          <div class="flex flex-wrap gap-4 text-gray-600">
            {
              company && (
                <p class="flex items-center">
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                    />
                  </svg>
                  {company}
                </p>
              )
            }
            {
              location && (
                <p class="flex items-center">
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                  </svg>
                  {location}
                </p>
              )
            }
            {
              type && (
                <p class="flex items-center">
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                  {type}
                </p>
              )
            }
            {
              remote && (
                <p class="flex items-center">
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                    />
                  </svg>
                  Remote
                </p>
              )
            }
          </div>
        </header>

        <div class="prose max-w-none mb-8">
          {description && <div class="whitespace-pre-wrap">{description}</div>}
        </div>

        <footer class="border-t pt-6">
          <div class="flex justify-between items-center">
            <time datetime={postedAt} class="text-gray-500">
              Posted: {new Date(postedAt).toLocaleDateString()}
            </time>
            {
              url && (
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                >
                  Apply Now
                </a>
              )
            }
          </div>
        </footer>
      </article>
    </div>
  </main>
</Layout>
